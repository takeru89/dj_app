<div class="background">
  <%= form_with model: current_user, class: "edit-form", local: true do |f| %>
    <div class="edit-form-wrap">
      <div class="edit-form-header">
        <h1 class="edit-form-header-text">
          Edit
        </h1>
      </div>

      <%= render 'shared/error_messages', model: f.object %>

      <div class="edit-form-group">
        <div class="edit-form-text-wrap">
          <label class="edit-form-text">Nickname</label>
        </div>
        <%= f.text_field :nickname, class: "edit-form-content" %>
      </div>
      <div class="edit-form-group">
        <div class="edit-form-text-wrap">
          <label class="edit-form-text">Email</label>
        </div>
        <%= f.email_field :email, class: "edit-form-content" %>
      </div>
      <div class="form-group">
        <div class="form-text-wrap">
          <label class="form-text">Password</label>
        </div>
        <%= f.password_field :password, class: "form-content" %>
      </div>
      <div class="form-group">
        <div class="form-text-wrap">
          <label class="form-text">Confirm password</label>
        </div>
        <%= f.password_field :password_confirmation, class: "form-content" %>
      </div>
      <div class="edit-user">
        <%= f.submit "Edit", class: "edit-user-button" %>
      </div>
      <div class="edit-bottom">
        <%= link_to image_tag('dj_logo.png', class:"edit-bottom-logo"), "/words" %>
      </div>
    </div>
  <% end %>
</div>