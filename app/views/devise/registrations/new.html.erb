<div class="registration-wrap">
  <%= form_with model: @user, url: user_registration_path, class: "sign-up-form", local: true do |f| %>
    <div class="form-wrap">
      <div class="form-header">
        <h1 class="form-header-text">
          Sign Up
        </h1>
      </div>

      <%= render 'shared/error_messages', model: f.object %>

      <div class="form-group">
        <div class="form-text-wrap">
          <%= f.label :nickname, "Nickname", class: "form-text" %>
        </div>
        <%= f.text_field :nickname, placeholder: "e.g. Johnny", class: "form-content", maxlength: "30" %>
      </div>
      <div class="form-group">
        <div class="form-text-wrap">
          <%= f.label :email, "Email", class: "form-text" %>
        </div>
        <%= f.email_field :email, placeholder: "e.g. xxxxx@xxx.xxx", class: "form-content" %>
      </div>
      <div class="form-group">
        <div class="form-text-wrap">
          <%= f.label :password, "Password", class: "form-text" %>
        </div>
        <%= f.password_field :password, placeholder: "8 characters or longer. At least 1 number.", class: "form-content" %>
      </div>
      <div class="form-group">
        <div class="form-text-wrap">
          <%= f.label :password_confirmation, "Confirm password", class: "form-text" %>
        </div>
        <%= f.password_field :password_confirmation, placeholder: "Same pasword.", class: "form-content" %>
      </div>
      <div class="sign-up">
        <%= f.submit "Sign Up", class: "sign-up-button" %>
      </div>
      <div class="sign-up-bottom">
        <%= link_to image_tag('dj_logo.png', class:"sign-up-bottom-logo"), "/words" %>
      </div>
    </div>
  <% end %>
</div>
