<div class="background">
<%= form_with model: @user, url: user_registration_path, class: "sign-up-form", local: true do |f| %>
  <div class="form-wrap">
    <div class="form-header">
      <h1 class="form-header-text">
        Sign Up
      </h1>
    </div>

    <%= render 'shared/error_messages', model: f.object %>

    <div class="form-group">
      <div class="form-text-wrap">
        <label class="form-text">Nickname</label>
      </div>
      <%= f.text_field :nickname, placeholder: "e.g. Johnny", class: "form-content", maxlength: "30" %>
    </div>
    <div class="form-group">
      <div class="form-text-wrap">
        <label class="form-text">Email</label>
      </div>
      <%= f.email_field :email, placeholder: "e.g. xxxxx@xxx.xxx", class: "form-content" %>
    </div>
    <div class="form-group">
      <div class="form-text-wrap">
        <label class="form-text">Password</label>
      </div>
      <%= f.password_field :password, placeholder: "8 characters or longer. At least 1 number.", class: "form-content" %>
    </div>
    <div class="form-group">
      <div class="form-text-wrap">
        <label class="form-text">Confirm password</label>
      </div>
      <%= f.password_field :password_confirmation, placeholder: "Same pasword.", class: "form-content" %>
    </div>
    <div class="sign-up">
      <%= f.submit "Sign Up", class: "sign-up-button" %>
    </div>
  </div>
<% end %>
</div>
