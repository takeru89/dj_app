<div class="background">
<%= form_with model: @user, url: user_session_path, class: "login-form", local: true do |f| %>
  <div class="form-wrap">
    <div class="form-header">
      <h1 class="form-header-text">
        Login
      </h1>
    </div>

    <div class='login-flash-message'>
      <%= flash[:notice] %>
      <%= flash[:alert] %>
    </div>

    <div class="form-group">
      <div class="form-text-wrap">
        <label class="form-text">Email</label>
      </div>
      <%= f.email_field :email, class: "form-content" %>
    </div>
    <div class="form-group">
      <div class="form-text-wrap">
        <label class="form-text">Password</label>
      </div>
      <%= f.password_field :password, class: "form-content" %>
    </div>
    <div class="login">
      <%= f.submit "Login", class: "login-button" %>
    </div>
  </div>
<% end %>
</div>
