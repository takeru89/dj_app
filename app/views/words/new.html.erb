<%= render "shared/header" %>

<div class="post-container">
  <%= form_with model: @word, url: words_path, class: "word-registration", local: true do |f| %>
    <div class="post-header">
      <h1 class="post-header-text">
        Post Word Info.
      </h1>
    </div>

    <%= render 'shared/word_error_messages', model: f.object %>

    <div class="post-contents"></div>
      <div class="word-kana-wrap">
        <div class="title-wrap">
          <%= f.label :kana, "kana", class: "kana-form-title" %>
          <span class="word-required">*required</span>
        </div>
        <%= f.text_field :kana, class: "kana-text" %>
      </div>
      <div class="word-kanji-wrap">
        <div class="title-wrap">
          <%= f.label :kanji, "kanji", class: "kanji-form-title" %>
        </div>
        <%= f.text_field :kanji, class: "kanji-text" %>
      </div>
      <div class="word-english-wrap">
        <div class="title-wrap">
          <%= f.label :english, "english", class: "english-form-title" %>
          <span class="word-required">*required</span>
        </div>
        <%= f.text_field :english, class: "english-text" %>
      </div>
      <div class="word-class-wrap">
        <div class="title-wrap">
          <%= f.label :word_class_id, "word class", class: "class-form-title" %>
          <span class="word-required">*required</span>
        </div>
        <%= f.collection_select(:word_class_id, WordClass.all, :id, :name, {}, {class: "class-select"}) %>
      </div>
      <div class="image">
        <div class="title-wrap">
          <%= f.label :image, "image", class: "image-form-title" %>
        </div>
        <%= f.file_field :image, class: "image-button"%>
      </div>
      <div class="explanation">
        <div class="title-wrap">
          <%= f.label :explanation, "explanation", class: "explanation-form-title" %>
          <span class="word-required">*required</span>
        </div>
        <%= f.text_area :explanation, class:"explanation-text" %>
      </div>
    </div>

    <div class="post-button-wrap">
      <%= f.submit "Post", class:"post-button" %>
      <%= link_to "Cancel", :back, class:"cancel-button" %>
    </div>
  <% end %>
</div>

<%= render "shared/footer_2" %>
