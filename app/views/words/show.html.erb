<header>
  <div class="header-upper">
    <div class="heading">
      <h1 class="app-name">Dict Japonicus</h1>
    </div>
    <div class="navbar">
      <% if user_signed_in? %>
        <ul class="nav-lists">
          <li><%= link_to "Post", new_word_path, class: "nav-piece" %></li>
          <li><%= link_to current_user.nickname, "#", class: "nav-piece" %></li>
          <li><%= button_to "Logout", destroy_user_session_path, method: :delete, class: "nav-piece" %></li>
        </ul>
      <% else %>
        <ul class="nav-lists">
          <li><%= button_to "Login", new_user_session_path, method: :get, class: "nav-piece" %></li>
          <li><%= button_to "Sign Up", new_user_registration_path, method: :get, class: "nav-piece" %></li>
        </ul>
      <% end %>
    </div>
  </div>
  <div class="header-lower">
    <form class=search-form>
      <input type="text" placeholder="filtering" class="search-filtering">
      <input type="text" placeholder="word" class="search-word">
      <input type="submit" value="Search" class="search-button">
    </form>
  </div>
</header>

<div class="word-info">
  <div class="info-header">
    <div class="info-header-box">
      <div class="info-header-text">
        <%= @word.kana %>
      </div>
      <div class="info-edit-button">
        <% if user_signed_in? && @word.user_id == current_user.id %>
          <%= link_to image_tag('edit_button.png', class:"edit-button"), edit_word_path(@word.id) %>
          <%= link_to image_tag('delete_button.png', class:"edit-button"), word_path(@word.id), method: :delete, data: {confirm: "Do you really want to delete this word-info?"} %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="info-upper">
    <div class="info-basic-box" >
      <table class="info-basic-table">
        <tr>
          <td class="info-table-left">kana:</td>
          <td class="info-table-right"><%= @word.kana %></td>
        </tr>
        <tr>
          <td class="info-table-left">kanji:</td>
          <% if @word.kanji.present? %>
            <td class="info-table-right"><%=@word.kanji %></td>
          <% else %>
            <td class="info-table-right">---</td>
          <% end %>
        </tr>
        <tr>
          <td class="info-table-left">class:</td>
          <td class="info-table-right"><%=@word.word_class.name %></td>
        </tr>
        <tr>
          <td class="info-table-left">english:</td>
          <td class="info-table-right"><%= @word.english %><td>
        </tr>
      </table>
    </div>
    <% if @word.image.present? %>
      <div class="info-img-box">
        <%= image_tag @word.image, class: "info-img-content"%>
      </div>
    <% end %>
  </div>
  <div class="info-lower">
    <table class="info-details-table">
      <tr>
        <td class="info-table-details">details:</td>
      </tr>
      <tr>
        <td class="info-details-box"><%= simple_format(@word.explanation) %></td>
      </tr>
    </table>
  </div>
</div>