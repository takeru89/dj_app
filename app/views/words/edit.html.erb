<%= render "shared/header" %>

<div class="edit-wrap">
  <%= form_with model: @word, url: word_path(@word.id), class: "word-edit", local: true do |f| %>
    <div class="edit-header">
      <h1 class="edit-header-text">
        Edit Word Info.
      </h1>
    </div>

    <%= render 'shared/word_error_messages', model: f.object %>

    <div class="edit-contents"></div>
      <div class="word-kana-wrap">
        <div class="title-wrap">
          <div class="kana-form-title">kana</div>
          <span class="word-required">*required</span>
        </div>
        <%= f.text_field :kana, class: "kana-text" %>
      </div>
      <div class="word-kanji-wrap">
        <div class="kanji-form-title">kanji
        </div>
        <%= f.text_field :kanji, class: "kanji-text" %>
      </div>
      <div class="word-english-wrap">
        <div class="title-wrap">
          <div class="english-form-title">english</div>
          <span class="word-required">*required</span>
        </div>
        <%= f.text_field :english, class: "english-text" %>
      </div>
      <div class="word-class-wrap">
        <div class="title-wrap">
          <div class="class-form-title">word class</div>
          <span class="word-required">*required</span>
        </div>
        <%= f.collection_select(:word_class_id, WordClass.all, :id, :name, {}, {class: "class-select"}) %>
      </div>
      <div class="image">
        <div class="image-form-title">image</div>
        <%= f.file_field :image, class: "image-button"%>
      </div>
      <div class="explanation">
        <div class="title-wrap">
          <div class="explanation-form-title">explanation</div>
          <span class="word-required">*required</span>
        </div>
        <%= f.text_area :explanation, class:"explanation-text" %>
      </div>
    </div>
    <div class="edit">
      <%= f.submit "Edit", class:"edit-post-button" %>
      <%= link_to "Cancel", word_path(@word.id), class:"cancel-button" %>
    </div>
  <% end %>
</div>

<%= render "shared/footer_2" %>